generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  username  String @unique
  password  String
  storyIdea storyIdea[]
}

model storyIdea {
  id          Int      @id @default(autoincrement())
  user_id     Int
  title       String
  description String
  user        User     @relation(fields: [user_id], references: [id])
}

